{{#if allData}}
  <h2>All data basic</h2>

  <table>
    <tr>
      <th>name</th>
      <th>surname</th>
      <th>group</th>
      <th>direction</th>
      <th>score</th>
      <th>Edit/Delete</th>
    </tr>
    {{#each allData}}
      <tr>
        <td>{{name}}</td>
        <td>{{surname}}</td>
        <td>{{group}}</td>
        <td>{{direction}}</td>
        <td>{{score}}</td>
        <td><a href="/edit/{{id}}">edit</a>/<a href="/delete/{{id}}">delete</a>
        </td>
      </tr>
    {{/each}}
  </table>
{{else}}
  <h2>No students</h2>
{{/if}}
<a href="/" class="add">add new student</a>